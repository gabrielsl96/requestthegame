<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="Esse é o Código-Chave do desafio:"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/text_codigo_compartilhar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/text_codigo_compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="XXXXXXXXXXXXXXX"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_text_compartiljhar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <TextView
            android:id="@+id/btn_text_copiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_baseline_file_copy_24"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Copiar"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_text_compartiljhar"
            app:layout_constraintEnd_toStartOf="@+id/btn_text_compartiljhar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_text_compartiljhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Compartilhar"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_finalizar_criar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_text_copiar"
            app:layout_constraintTop_toBottomOf="@+id/text_codigo_compartilhar" />

        <Button
            android:id="@+id/btn_finalizar_criar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Sair"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_text_compartiljhar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>