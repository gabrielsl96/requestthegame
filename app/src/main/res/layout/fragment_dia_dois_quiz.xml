<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_perguntas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Título das perguntas:"
            android:textSize="40sp"
            android:layout_margin="10dp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <RadioButton
                android:id="@+id/respostaUm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 1"/>
            <RadioButton
                android:id="@+id/respostaDois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 2"/>
            <RadioButton
                android:id="@+id/respostaTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 3"/>
            <RadioButton
                android:id="@+id/respostaQuatro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resposta 4"/>
        </RadioGroup>
        <Button
            android:id="@+id/btn_resposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Próxima pergunta"/>

    </LinearLayout>


</FrameLayout>